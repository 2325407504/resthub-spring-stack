<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
	<artifactId>identity-manager</artifactId>
	<groupId>org.resthub</groupId>
	<version>1.0-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
  </parent>
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.resthub</groupId>
  <artifactId>identity-manager-webapp</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Identity manager webapp</name>
  <description>Web GUI for Identity manager project</description>
  
  <dependencies>
    <dependency>
    	<groupId>org.resthub</groupId>
    	<artifactId>resthub-web</artifactId>
    	<version>1.0-SNAPSHOT</version>
    	<type>jar</type>
    	<scope>compile</scope>
    </dependency>
    <dependency>
    	<groupId>org.resthub</groupId>
    	<artifactId>identity-manager-core</artifactId>
    	<version>1.0-SNAPSHOT</version>
    	<type>jar</type>
    	<scope>compile</scope>
    </dependency>
  </dependencies>
  
  <properties>
	<netbeans.hint.deploy.server>Tomcat60</netbeans.hint.deploy.server>
  </properties>
  
  <build>
    <finalName>identity-manager-webapp</finalName>
    <plugins>
    	 <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <configuration>
          <scanIntervalSeconds>10</scanIntervalSeconds>
          <webAppConfig>
            <contextPath>/identity</contextPath>
          </webAppConfig>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
