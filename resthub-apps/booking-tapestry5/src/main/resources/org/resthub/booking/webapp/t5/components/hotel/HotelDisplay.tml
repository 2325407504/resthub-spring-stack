<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    <p>
        <strong>${message:name-label}</strong>${hotel.name}
    </p>
    <p>
        <strong>${message:address-label}</strong>${hotel.address}
    </p>
    <p>
        <strong>${message:city-label}</strong>${hotel.city}
    </p>
    <p>
        <strong>${message:state-label}</strong>${hotel.state}
    </p>
    <p>
        <strong>${message:zip-label}</strong>${hotel.zip}
    </p>
    <p>
        <strong>${message:country-label}</strong>${hotel.country}
    </p>
    <p>
        <strong>${message:price-label}</strong>${hotel.price}
    </p>
	<p>
		<strong>${message:stars-label}</strong>
		<t:hotelclass stars="hotel?.stars" />
	</p>
</html>
