<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>qlf</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
    	<dependencySet>
      		<includes>
        		<include>org.resthub:resthub-identity-manager</include>
      		</includes>
      		<outputDirectory>/</outputDirectory>
       		<unpack>true</unpack>
       		<unpackOptions>
       			<excludes>
					<exclude>index.html</exclude>
					<exclude>resources/labels/urls.js</exclude>
					<exclude>WEB-INF/web.xml</exclude>
					<exclude>WEB-INF/classes/applicationContext.xml</exclude>
       			</excludes>
       		</unpackOptions>
       		<outputFileNameMapping></outputFileNameMapping>
      		<scope>runtime</scope>
    	</dependencySet>
    </dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/webapp-tofilter/js</directory>
			<filtered>true</filtered>
			<outputDirectory>/resources/labels</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp-tofilter/html</directory>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/config/qlf/</directory>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/resources/applicationContext.xml</source>
			<filtered>true</filtered>
			<outputDirectory>WEB-INF/classes/</outputDirectory>
		</file>
	</files>
</assembly>