<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:resthub="http://www.resthub.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.resthub.org/schema/context
    http://www.resthub.org/schema/context/resthub-context-1.0.xsd">

	<resthub:entities-scan base-package="org.resthub.core.context.config.model" use-default-filters="false">
		<resthub:include-filter type="annotation" expression="javax.persistence.Entity"/>
		<resthub:exclude-filter type="annotation" expression="javax.persistence.MappedSuperclass"/>
	</resthub:entities-scan>
</beans>