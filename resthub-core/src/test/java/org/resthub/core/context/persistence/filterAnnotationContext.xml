<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:persistence="http://www.resthub.org/schema/persistence"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.resthub.org/schema/persistence
    http://www.resthub.org/schema/persistence/resthub-persistence-1.0.xsd">

	<persistence:include-entities base-package="org.resthub.core.context.persistence.model" use-default-filters="false">
		<persistence:include-filter type="annotation" expression="javax.persistence.Entity"/>
		<persistence:exclude-filter type="annotation" expression="javax.persistence.MappedSuperclass"/>
	</persistence:include-entities>
</beans>